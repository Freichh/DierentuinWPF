<Window x:Class="DierentuinWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DierentuinWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Center" Height="76" Width="93"/>
        <Button x:Name="AddMonkeyButton" Content="Aap" HorizontalAlignment="Left" VerticalAlignment="Center" Height="76" Width="172" Grid.Column="1" Margin="10,0,0,0" Click="AddMonkeyButton_Click"/>
        <Button x:Name="AddLionButton" Content="Lion" HorizontalAlignment="Left" VerticalAlignment="Center" Height="76" Width="172" Grid.Column="1" Margin="201,0,0,0"/>
        <Button x:Name="AddElephantButton" Content="Olifant" HorizontalAlignment="Left" VerticalAlignment="Center" Height="76" Width="172" Grid.Column="1" Margin="387,0,0,0"/>
        <Button x:Name="FeedAllButton" Content="Feed All" HorizontalAlignment="Center" VerticalAlignment="Top" Height="76" Width="93" Margin="0,10,0,0" Grid.Row="1"/>
        <Button x:Name="FeedMonkeyButton" Content="Feed Monkey" HorizontalAlignment="Center" VerticalAlignment="Top" Height="76" Width="93" Margin="0,98,0,0" Grid.Row="1"/>
        <Button x:Name="FeedLionButton" Content="Feed Lion" HorizontalAlignment="Center" VerticalAlignment="Top" Height="76" Width="93" Margin="0,187,0,0" Grid.Row="1"/>
        <Button x:Name="FeedElephantButton" Content="Feed Elephant" HorizontalAlignment="Center" VerticalAlignment="Top" Height="76" Width="93" Margin="0,277,0,0" Grid.Row="1"/>
        <WrapPanel Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
